<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/mainbackgroundwhite">

    <TextView
        android:layout_marginLeft="120dp"
        android:layout_marginTop="40dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Local Time"
        android:textSize="19sp"
        android:textColor="#ffffff"/>

    <LinearLayout
        android:layout_marginTop="3dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        />
        <EditText
            android:layout_marginLeft="19dp"
            android:id="@+id/a1"
            android:maxLength="4"
            android:inputType="number"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:width="58dp"
            android:textColor="#ffffff"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="年"
            android:textSize="15sp"
            android:textColor="#ffffff"/>
        <EditText
            android:id="@+id/a2"
            android:maxLength="2"
            android:inputType="number"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:width="30dp"
            android:textColor="#ffffff"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="月"
            android:textSize="15sp"
            android:textColor="#ffffff"
            />
        <EditText
            android:id="@+id/a3"
            android:maxLength="2"
            android:inputType="number"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:width="30dp"
            android:textColor="#ffffff"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="日"
            android:textSize="15sp"
            android:textColor="#ffffff"/>
        <EditText
            android:id="@+id/a4"
            android:maxLength="2"
            android:inputType="number"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:width="30dp"
            android:textColor="#ffffff"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="15sp"
            android:text="时"
            android:textColor="#ffffff"/>
        <EditText
            android:id="@+id/a5"
            android:maxLength="2"
            android:inputType="number"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:width="30dp"
            android:textColor="#ffffff"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="15sp"
            android:text="分"
            android:textColor="#ffffff"/>
        <EditText
            android:id="@+id/a6"
            android:maxLength="2"
            android:inputType="number"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:width="30dp"
            android:textColor="#ffffff"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="15sp"
            android:text="秒"
            android:textColor="#ffffff"/>
    </LinearLayout>

    <TextView
        android:layout_marginTop="5dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:textColor="#ffffff"
        android:text="注意：请按照正确的时间格式输入（如2019年08月09日16时03分08秒）,否则可能转换错误."/>

    <LinearLayout
        android:layout_marginTop="13dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <Button
            android:id="@+id/compute"
            android:layout_marginLeft="52dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="转换"
            android:background="@color/colorBluePrimaryDark"
            android:textColor="#ffffff"
            android:textSize="14sp"
            />
        <Button
            android:id="@+id/reset"
            android:layout_marginLeft="80dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="清空"
            android:background="@color/colorBluePrimaryDark"
            android:textColor="#ffffff"
            android:textSize="14sp"
            />
    </LinearLayout>

    <ImageView
        android:layout_marginTop="16dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/line"/>

    <LinearLayout
        android:layout_marginTop="8dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:layout_marginLeft="30dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="U T C ："
            android:textSize="16sp"
            android:textColor="#ffffff"/>
        <EditText
            android:id="@+id/a7"
            android:enabled="false"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:width="210dp"
            android:textColor="#ffffff"/>

    </LinearLayout>
    <LinearLayout
        android:layout_marginTop="5dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:layout_marginLeft="30dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="G P S ："
            android:textSize="16sp"
            android:textColor="#ffffff"/>
        <EditText
            android:id="@+id/a8"
            android:enabled="false"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:width="210dp"
            android:textColor="#ffffff"/>

        />
    </LinearLayout>
    <LinearLayout
        android:layout_marginTop="5dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:layout_marginLeft="32dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Loran："
            android:textSize="16sp"
            android:textColor="#ffffff"/>
        <EditText
            android:id="@+id/a9"
            android:enabled="false"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:width="210dp"
            android:textColor="#ffffff"/>
    </LinearLayout>
    <LinearLayout
        android:layout_marginTop="5dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:layout_marginLeft="34dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="T A I ："
            android:textSize="16sp"
            android:textColor="#ffffff"/>
        <EditText
            android:id="@+id/a10"
            android:enabled="false"
            android:layout_marginLeft="3dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:width="210dp"
            android:textColor="#ffffff"/>
    </LinearLayout>

    <Button
        android:layout_marginTop="11dp"
        android:id="@+id/exit"
        android:layout_marginLeft="142dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="返回"
        android:background="@color/colorBluePrimaryDark"
        android:textColor="#ffffff"
        android:textSize="14sp"
        />


</LinearLayout>